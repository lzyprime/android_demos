<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="io.lzyprime.core.viewmodels.UserViewModel" />

        <import type="io.lzyprime.core.data.models.LoginState" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="256dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorOnPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">

                <ImageView
                    android:id="@+id/app_bar_image"
                    srcCompat="@{model.user.avatar}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.1" />

                <LinearLayout
                    android:id="@+id/userInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    app:layout_collapseMode="parallax">

                    <com.google.android.material.imageview.ShapeableImageView
                        srcCompat="@{model.user.avatar ?? @drawable/ic_person}"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="?attr/colorOnPrimary"
                        app:shapeAppearance="@style/ImageCircleShape"
                        tools:srcCompat="@drawable/ic_person" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{model.loginState instanceof LoginState.NotLogin ? @string/login : model.user.username}"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            tools:text="username" />

                        <TextView
                            isGone="@{model.user == null}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{@string/id(model.user.id)}"
                            tools:text="ID: xxxxxxx" />

                        <TextView
                            isGone="@{model.user == null}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{model.user.email}"
                            tools:text="xxxx@email.com" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <LinearLayout
                        isGone="@{model.loginState instanceof LoginState.NotLogin}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingVertical="20dp"
                            android:text="@{String.valueOf(model.user.likes)}"
                            app:drawableTopCompat="@drawable/ic_favorite"
                            tools:text="like" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:background="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingVertical="20dp"
                            android:text="@{String.valueOf(model.user.collections)}"
                            app:drawableTopCompat="@drawable/ic_collect"
                            tools:text="collections" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:background="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingVertical="20dp"
                            android:text="@{String.valueOf(model.user.photos)}"
                            app:drawableTopCompat="@drawable/ic_photo_library"
                            tools:text="photos"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:background="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingVertical="20dp"
                            android:text="@{String.valueOf(model.user.followers)}"
                            app:drawableTopCompat="@drawable/ic_settings"
                            tools:text="followers" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:background="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingVertical="20dp"
                            android:text="@{String.valueOf(model.user.following)}"
                            app:drawableTopCompat="@drawable/ic_settings"
                            tools:text="following" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/settingsBtn"
                    android:layout_width="match_parent"
                    android:background="?attr/colorOnPrimary"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_settings"
                        />
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        app:srcCompat="@drawable/ic_arrow_forward"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>