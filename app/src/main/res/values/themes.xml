<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Definitely" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="Theme.Definitely" parent="Base.Theme.Definitely">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pin_lan</item>
        <item name="colorPrimaryVariant">@color/pin_lan_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pin_hong</item>
        <item name="colorSecondaryVariant">@color/pin_hong_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/qian_shi_bai</item>
        <item name="titleTextColor">@color/luan_shi_zi</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="Theme.Definitely.Fullscreen" parent="Theme.Definitely">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/full_screen_splash</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>
</resources>